{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 14,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "user-dev",
      "displayName": "User Development",
      "description": "Custom user development preset",
      "binaryDir": "${sourceDir}/build/user-dev",
      "inherits": "dev",
      "cacheVariables": {
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
        "CMAKE_MAKE_PROGRAM": "/usr/bin/make",
        "CMAKE_CXX_COMPILER": "/usr/bin/clang++",
        "CMAKE_C_COMPILER": "/usr/bin/clang"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "user-dev",
      "configurePreset": "user-dev",
      "configuration": "Debug",
      "jobs": 12
    }
  ],
  "testPresets": [
    {
      "name": "user-dev",
      "configurePreset": "user-dev",
      "configuration": "Debug",
      "output": {
        "outputOnFailure": true
      },
      "execution": {
        "jobs": 12,
        "noTestsAction": "error"
      }
    }
  ]
}
