                }
              },
              {
                "description": "go down",
                "key": "S",
                "pressed": {
                  "name": "UpdateDirection",
                  "params": {
                    "x": 0.0,
                    "y": 1.0
                  }
                },
                "released": {
                  "name": "UpdateDirection",
                  "params": {
                    "x": 0.0,
                    "y": -1.0
                  }
                }
              },
              {
                "description": "shoot",
                "key": "SPACE",
                "pressed": {
                  "name": "FireBullet",
                  "params": {}
                }
              },
              {
                "description": "shoot",
                "key": "P",
                "pressed": {
                  "name": "StartChargeWeapon",
                  "params": {}
                },
                "released": {
                  "name": "ReleaseChargeWeapon",
                  "params": {}
                }
              }
            ]
          }
        }
